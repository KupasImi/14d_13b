<Window x:Class="Atvalto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atvalto"
        mc:Ignorable="d"
        Title="Mérföld átváltás" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Content="Mph-Kmh átváltás" FontSize="40" HorizontalAlignment="Center"/>
        <TextBox x:Name="mphSebesseg"
                 MinHeight="30"
                 MaxHeight="30"
                 MaxWidth="150"
                 Grid.Row="1"/>
        <Label x:Name="kmhSebesseg"
               FontSize="30"
               Grid.Row="2"
               HorizontalAlignment="Center"/>
        <Button Content="Átváltás"
                Margin="20"
                Grid.Row="3"
                MinWidth="100"
                MaxWidth="100"
                MinHeight="50"
                MaxHeight="50"
                FontSize="16" Click="Button_Click"
                />

    </Grid>
</Window>
